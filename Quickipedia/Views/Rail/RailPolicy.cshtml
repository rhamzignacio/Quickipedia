
@{
    ViewBag.Title = "Rail Policy";
}
<div class="" role="main" ng-controller="railController as vm" ng-init="initRailPolicy()">
    <div class="x_content">
        <h3>Rail Policy</h3>

        <div ng-show="vm.RailPolicy.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.RailPolicy.ShowModifiedBy}} - {{vm.RailPolicy.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" 
                      ng-model="vm.RailPolicy.Policy">
            </textarea>
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveRailPolicy(vm.RailPolicy)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.RailPolicy.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.RailPolicy.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>