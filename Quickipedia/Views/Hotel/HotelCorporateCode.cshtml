
@{
    ViewBag.Title = "Hotel Corporate Code";
}
<div class="" role="main" ng-controller="hotelController as vm" ng-init="initHotelCorporateCode()">
    <div class="x_content">
        <h3>Hotel Corporate Code</h3>

        <div ng-show="vm.HotelCorporateCode.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.HotelCorporateCode.ShowModifiedBy}} - {{vm.HotelCorporateCode.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <label>Corporate Code</label>
            <input type="text" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'"  
                   ng-model="vm.HotelCorporateCode.CorporateCode" />
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveHotelCorporateCode(vm.HotelCorporateCode)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.HotelCorporateCode.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.HotelCorporateCode.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>