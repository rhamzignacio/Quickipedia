
@{
    ViewBag.Title = "Hotel Policy";
}

<div class="" role="main" ng-controller="hotelController as vm" ng-init="initHotelPolicy()">
    <div class="x_content">
        <h3>Hotel Policy</h3>

        <div ng-show="vm.HotelPolicy.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.HotelPolicy.ShowModifiedBy}} - {{vm.HotelPolicy.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'"
                       ng-model="vm.HotelPolicy.Policy">
            </textarea>
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveHotelPolicy(vm.HotelPolicy)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.HotelPolicy.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.HotelPolicy.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>