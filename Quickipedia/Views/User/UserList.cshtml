
@{
    ViewBag.Title = "UserList";
}

<div class="" role="main" ng-controller="userController as user" ng-init="InitUser()">
    <div class="x_content">
        <h3>User Accounts</h3>

        <table id="userAccountsTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="80px;">
                        <button class="btn btn-success btn-xs" data-toggle="modal" data-target="#userModal" ng-click="">
                            <span class="fa fa-plus"></span>
                        </button>
                    </th>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Access Level</th>
                    <th>Status</th>
                    <th>Modified By</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in user.Users">
                    <td>
                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#userModal" ng-click="EditModal(item)">
                            <span class="fa fa-pencil"></span>
                        </button>

                        <button type="button" class="btn btn-danger btn-xs" ng-click="DeleteUser(item)">
                            <span class="fa fa-lock" ng-show="item.Status == 'Y'"></span>
                            <span class="fa fa-unlock" ng-show="item.Status != 'Y'"></span>
                        </button> 
                    </td>
                    <th>{{item.Username}}</th>
                    <th>{{item.FirstName}}</th>
                    <th>{{item.LastName}}</th>
                    <th>{{item.ShowAccessLevel}}</th>
                    <th>{{item.ShowStatus}}</th>
                    <th>{{item.ShowModifiedBy}}</th>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="modal fade" id="userModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">User Account</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" ng-model="user.Modal.Username" />
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" ng-model="user.Modal.Password" />
                    </div>

                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" class="form-control" ng-model="user.Modal.ConfirmPassword" />
                    </div>

                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" ng-model="user.Modal.FirstName" />
                    </div>

                    <div class="form-group">
                        <label>Middle Initial</label>
                        <input type="text" class="form-control" ng-model="user.Modal.MiddleInitial" />
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" class="form-control" ng-model="user.Modal.LastName" />
                    </div>

                    <div class="form-group">
                        <label>Type</label>
                        <select class="form-control" style="width:100%" ng-model="user.Modal.Type"
                                ng-options="item.value as item.label for item in Type"></select>
                    </div>

                    <div class="form-group">
                        <label>Acess Level</label>
                        <select class="form-control" style="width:100%" ng-model="user.Modal.AccessLevel"
                                ng-options="item.value as item.label for item in AccessLevel"></select>
                    </div>

                    <div class="form-group">
                        <button type="button" class="btn btn-primary" ng-click="SaveUser(user.Modal)">Ok</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>