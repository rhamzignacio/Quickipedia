                <th>
                    <button type="button" class="btn btn-default btn-xs" ng-click="AssignTime(fees)"
                            data-toggle="modal" data-target="#timeModal">
                        <i class="fa fa-clock-o"></i>
                    </button>
                </th>
            </tr>
            <!--/Loyalty Programme Booking-->

            <!--Insurance-->
