
@{
    ViewBag.Title = "Visa Documentation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="" role="main" ng-controller="visaDocumentationController as vm" ng-init="initVisa()">
    <div class="x_content">
        <h3>Visa Documentation</h3>

        <div ng-show="vm.VisaDocumentation.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.VisaDocumentation.ShowModifiedBy}} - {{vm.VisaDocumentation.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" 
                      ng-model="vm.VisaDocumentation.ProcessFlow">
            </textarea>
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveVisa(vm.VisaDocumentation)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.VisaDocumentation.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.VisaDocumentation.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>

