
@{
    ViewBag.Title = "BillingCollectionFinance";
}

<div class="" role="main" ng-controller="pricingAndFinancialController as vm" ng-init="initBillingCollectionFinance()">
    <div class="x_content">
        <h3>Billing | Collection | Finance Manager</h3>

            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th width="75px" ng-show="main.CurrentUser.AccessLevel == 'A'">
                            <button class="btn btn-success btn-xs form" data-toggle="modal" data-target="#BillingModal"><i class="fa fa-plus"></i></button>
                        </th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Email</th>
                        <th>Contact No</th>
                        <th>Stamp</th>                     
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="item in vm.BillingCollectionFinances | filter: {Status: '!X'}">
                        <td ng-show="main.CurrentUser.AccessLevel == 'A'">
                            <button class="btn btn-info btn-xs" ng-click="editBilling(item)" data-toggle="modal" data-target="#BillingModal"><i class="fa fa-pencil"></i></button>
                            <button class="btn btn-danger btn-xs" ng-click="RemoveBilling(item)" data-toggle="modal"
                                    data-target="#deleteBilling"><i class="fa fa-close"></i></button>
                        </td>
                        <td>{{item.Name}}</td>
                        <td>{{item.Position}}</td>
                        <td>{{item.Email}}</td>
                        <td>{{item.ContactNo}}</td>
                        <td>{{item.ShowModifiedBy}} - {{item.ShowModifiedDate}}</td>         
                    </tr>
                </tbody>
            </table>
        </div>

    <div class="modal fade" id="deleteBilling" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Are you sure you want to Delete?</h4>
                </div>

                <div class="modal-body">
                    <button class="btn btn-warning" ng-click="DeleteBilling()">Yes</button>
                    <button class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="BillingModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Billing | Collection | Finance</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <label class="control-label">Name</label>
                            <input type="text" class="form-control" ng-model="vm.Modal.Name" />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Position</label>
                            <input type="text" class="form-control" ng-model="vm.Modal.Position" />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Email</label>
                            <input type="text" class="form-control" ng-model="vm.Modal.Email" />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Contact No</label>
                            <input type="text" class="form-control" ng-model="vm.Modal.ContactNo" />
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary" data-dismiss="modal" ng-click="saveBillingCollection(vm.Modal)">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>