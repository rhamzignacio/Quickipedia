
@{
    ViewBag.Title = "Invoice Attachment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="" role="main" ng-controller="pricingAndFinancialController as vm" ng-init="initInvoiceAttachment()">
    <div class="x_content">
        <h3>Invoice Attachment</h3>

        <div ng-show="vm.InvoiceAttachment.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.InvoiceAttachment.ShowModifiedBy}} - {{vm.InvoiceAttachment.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.InvoiceAttachment.Value"></textarea>
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveInvoiceAttachment(vm.InvoiceAttachment)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.InvoiceAttachment.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.InvoiceAttachment.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>