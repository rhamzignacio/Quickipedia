
@{
    ViewBag.Title = "Refund Process";
}

<div class="" role="main" ng-controller="pricingAndFinancialController as vm" ng-init="initRefundProcess()">
    <div class="x_content">
        <h3>Refund Process</h3>

        <div ng-show="vm.RefundProcess.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.RefundProcess.ShowModifiedBy}} - {{vm.RefundProcess.ShowModifiedDate}}</small>
        </div>  
          
        <div class="x_content">
            <div class="form-group">
                <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" 
                          ng-model="vm.RefundProcess.Process"></textarea>
            </div>

            <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
                <button type="button" class="btn btn-primary" ng-click="saveRefundProcess(vm.RefundProcess)">
                    <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.RefundProcess.ClientCode == null">Save</span>
                    <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.RefundProcess.ClientCode != null">Update</span>
                </button>
            </div>
        </div>
    </div>
</div>
