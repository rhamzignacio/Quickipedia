
@{
    ViewBag.Title = "Other";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="miceController as vm" ng-init="initOther()">
    <div class="x_content">
        <h3>Others</h3>

        <div ng-show="vm.Others.ShowModifiedBY != ''">
            <small>Modified By: {{vm.MiceOther.ShowModifiedBy}} - {{vm.MiceOther.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'"
                      ng-model="vm.MiceOther.Value"></textarea>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" ng-click="SaveOther(vm.MiceOther)" ng-show="main.CurrentUser.AccessLevel == 'A'">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.MiceOther.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.MiceOther.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>