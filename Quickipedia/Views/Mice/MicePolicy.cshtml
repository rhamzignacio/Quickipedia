@{
    ViewBag.Title = "Mice Policy";
}

<div class="" role="main" ng-controller="miceController as vm" ng-init="initMicePolicy()">
    <div class="x_content">
        <h3>Mice Policy</h3>

        <div ng-show="vm.MicePolicy.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.MicePolicy.ShowModifiedBy}} - {{vm.MicePolicy.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'"
                      ng-model="vm.MicePolicy.Policy">
            </textarea>
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveMicePolicy(vm.MicePolicy)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.MicePolicy.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.MicePolicy.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>