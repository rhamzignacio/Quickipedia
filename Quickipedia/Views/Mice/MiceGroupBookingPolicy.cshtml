
@{
    ViewBag.Title = "Mice Group Booking Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="" role="main" ng-controller="miceController as vm" ng-init="initGroupBookingPolicy()">
    <div class="x_content">
        <h3>Group Booking Policy</h3>

        <div ng-show="vm.GroupPolicy.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.GroupPolicy.ShowModifiedBy}} - {{vm.GroupPolicy.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'"
                      ng-model="vm.GroupPolicy.GroupPolicy">
            </textarea>
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveGroupBooking(vm.GroupPolicy)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.GroupPolicy.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.GroupPolicy.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>