@{
    ViewBag.Title = "Ticketing Approval";
}

<div class="" role="main" ng-controller="miceController as vm" ng-init="initTicketingApproval()">
    <div class="x_content">
        <h3>Ticketing / Approval / Billing Requirements</h3>

        <div ng-show="vm.TicketingApproval.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.TicketingApproval.ShowModifiedBy}} - {{vm.TicketingApproval.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control"  ng-disabled="main.CurrentUser.AccessLevel == 'U'"
                      ng-model="vm.TicketingApproval.TicketingApproval">
            </textarea>
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveTicketing(vm.TicketingApproval)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.TicketingApproval.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.TicketingApproval.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>