
@{
    ViewBag.Title = "International";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="bookingProcessController as vm" ng-init="initINTL()">
    <div class="x_content">
        <h3>International - Booking Process</h3>

        <div ng-show="vm.INTL.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.INTL.ShowModifiedBy}} - {{ vm.INTL.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLeve == 'U'"
                      ng-model="vm.INTL.Value"></textarea>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" ng-click="saveInternational(vm.INTL)" ng-show="main.CurrentUser.AccessLevel =='A'">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.INTL.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.INTL.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>