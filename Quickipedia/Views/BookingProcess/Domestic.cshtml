
@{
    ViewBag.Title = "Domestic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="bookingProcessController as vm" ng-init="initDOM()">
    <div class="x_content">
        <h3>Domestic - Booking Process</h3>

        <div ng-show="vm.DOM.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.DOM.ShowModifiedBy}} - {{ vm.DOM.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLeve == 'U'"
                      ng-model="vm.DOM.Value"></textarea>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" ng-click="saveDomestic(vm.DOM)" ng-show="main.CurrentUser.AccessLevel =='A'">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.DOM.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.DOM.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>