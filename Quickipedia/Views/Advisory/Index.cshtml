
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" ng-controller="advisoryController as vm" ng-init="init()">
    <div class="x_content">
        <h3>Advisory</h3>

        <table id="advisoryTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th><button class="btn btn-success btn-xs" data-toggle="modal" data-target="#airlineModal"><i class="fa fa-plus"></i></button></th>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Created By</th>
                </tr>
            </thead>

            <tbody>
                <tr ng-repeat="advisory in vm.Advisory">
                    <td></td>
                    <td>{{advisory.ShowModifiedDate}}</td>
                    <td>{{advisory.Title}}</td>
                    <th>{{advisory.Message}}</th>
                    <th>{{advisory.ShowModifiedBy}}</th>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="advisoryModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Advisory</h4>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" ng-model="vm.Modal.Title" />
                </div>

                <div class="form-group">
                    <label>Content</label>
                    <textarea class="form-control" rows="6" ng-model="vm.Modal.Message"></textarea>
                </div>

                <div class="form-group">
                    <button type="button" class="btn btn-success" ng-click="saveAdvisory(vm.Modal)">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>