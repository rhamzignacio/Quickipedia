@{
    ViewBag.Title = "VIP List";
}

<div class="" role="main" ng-controller="vipController as vm" ng-init="initVIPList()">
    <div class="x_content">
        <h3>VIP List</h3>

        @*<div ng-show="vm.VIP.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.VIP.ShowModifiedBy}} - {{vm.VIP.ShowModifiedDate}}</small>
        </div>*@

        <div class="x_content">
            <table id="vipTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th width="80px;" ng-show="main.CurrentUser.AccessLevel=='A'">
                            <button class="btn btn-success btn-xs" data-toggle="modal" data-target="#vipModal" ng-click="addVIP()"><i class="fa fa-plus"></i></button>
                        </th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Email</th>
                        <th>Contact No</th>
                        <th>Remarks</th>
                        <th width="15px"></th>
                    </tr>
                </thead>

                <tbody>
                    <tr ng-repeat="vip in vm.VIP | filter: {Status: '!X'}">
                        <td ng-show="main.CurrentUser.AccessLevel == 'A'">
                            <button class="btn btn-primary btn-xs" ng-click="editVIP(vip)" ng-show="main.CurrentUser.AccessLevel=='A'"
                                    data-toggle="modal" data-target="#vipModal">
                                <i class="fa fa-pencil" ng-show="main.CurrentUser.AccessLevel=='A'"></i>
                            </button> 
                            <button class="btn btn-danger btn-xs" ng-click="editVIP(vip)" data-target="#vipDeleteModal" data-toggle="modal"><i class="fa fa-close"></i></button>
                        </td>
                        <td>{{vip.Name}}</td>
                        <td>{{vip.Position}}</td>
                        <td>{{vip.Email}}</td>
                        <td>{{vip.ContactNo}}</td>
                        <td>{{vip.Remarks}}</td>
                        <td><button class="btn btn-default btn-xs"><i class="fa fa-clock-o"></i></button></td>
                    </tr>
                </tbody>
            </table> 
        </div>

        <div class="modal fade" id="vipModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">VIP</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" ng-model="vm.vipModal.Name" />
                        </div>

                        <div class="form-group">
                            <label>Position</label>
                            <input class="form-control" ng-model="vm.vipModal.Position" />
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input class="form-control" ng-model="vm.vipModal.Email" />
                        </div>

                        <div class="form-group">
                            <label>Contact No</label>
                            <input class="form-control" ng-model="vm.vipModal.ContactNo" />
                        </div>

                        <div class="form-group">
                            <label>Remarks</label>
                            <input class="form-control" ng-model="vm.vipModal.Remarks" />
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary" ng-click="saveVIP(vm.vipModal)">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="vipDeleteModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Are you sure you want to Delete?</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <button type="button" class="btn btn-danger" ng-click="deleteVIP()">Yes</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*<div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.VIP.VIPList">
            </textarea>
        </div>*@

        @*<div class="form-group">
            <button type="button" class="btn btn-primary" ng-click="saveVIP(vm.VIP)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.VIP.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.VIP.ClientCode != null">Update</span>
            </button>
        </div>*@
    </div>
</div>