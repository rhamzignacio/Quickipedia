
@{
    ViewBag.Title = "Car Policy";
}

<div class="" role="main" ng-controller="carController as vm" ng-init="initCarPolicy()">
    <div class="x_content">
        <h3>Car Policy</h3>

        <div ng-show="vm.CarPolicy.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.CarPolicy.ShowModifiedBy}} - {{vm.CarPolicy.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" 
                      ng-model="vm.CarPolicy.Policy">
            </textarea>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" ng-click="saveCarPolicy(vm.CarPolicy)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.CarPolicy.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.CarPolicy.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>