
@{
    ViewBag.Title = "Car Corporate Code";
}

<div class="" role="main" ng-controller="carController as vm" ng-init="initCarCorporateCode()">
    <div class="x_content">
        <h3>Car Corporate Code</h3>

        <div ng-show="vm.CarCorporateCode.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.CarCorporateCode.ShowModifiedBy}} - {{vm.CarCorporateCode.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <label>Corporate Code</label>
            <input type="text" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" 
                    ng-model="vm.CarCorporateCode.CorporateCode" />
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" ng-click="saveCarCorporateCode(vm.CarCorporateCode)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.CarCorporateCode.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.CarCorporateCode.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>