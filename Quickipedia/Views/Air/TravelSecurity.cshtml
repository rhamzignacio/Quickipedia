
@{
    ViewBag.Title = "Travel Security";
}

<div class="" role="main" ng-controller="airController as vm" ng-init="initTravelSecurity()">
    <div class="x_content">
        <h3>Travel Security</h3>
        <div ng-show="vm.TravelSecurity.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.TravelSecurity.ShowModifiedBy}} - {{vm.TravelSecurity.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'"
                      ng-model="vm.TravelSecurity.TravelSecurity">
            </textarea>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" ng-click="saveTravelSecurity(vm.TravelSecurity)" ng-show="main.CurrentUser.AccessLevel == 'A'">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.TravelSecurity.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.TravelSecurity.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>