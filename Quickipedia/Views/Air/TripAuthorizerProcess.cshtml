@{
    ViewBag.Title = "Trip Authorizer Process";
}

<div class="" role="main" ng-controller="airController as vm" ng-init="initTripAuthorizer()">
    <div class="x_content">
        <h3>Trip Authorizer Process</h3>

        <div ng-show="vm.TripAuthorizer.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.TripAuthorizer.ShowModifiedBy}} - {{vm.TripAuthorizer.ShowModifiedDate}}</small>
        </div>

        <div class="form-group">
            <textarea rows="30" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'"  
                      ng-model="vm.TripAuthorizer.TripAuthorizer"></textarea>
        </div>

        <div class="form-group">
            <button type="button" class="btn btn-primary" ng-click="saveTripAuthorizer(vm.TripAuthorizer)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.TripAuthorizer.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.TripAuthorizer.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>