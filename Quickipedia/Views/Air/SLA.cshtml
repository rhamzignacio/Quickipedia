@{
    ViewBag.Title = "SLA";
}

<div class="" role="main" ng-controller="airController as vm" ng-init="initSLA()">
    <div class="x_content">
        <h3>SLA</h3>
        <div ng-show="vm.SLA.ShowModifiedBy != ' '">
            <small>Modified By: {{vm.SLA.ShowModifiedBy}} - {{vm.SLA.ShowModifiedDate}}</small>
        </div>
        <div class="form-group">
            <label>Response Time</label>
            <textarea class="form-control" rows="3" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.SLA.ResponseTime"></textarea>
        </div>

        <div class="form-group">
            <label>No of Quotation Option</label>
            <textarea rows ="3" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.SLA.NoOfQuotationOptions"></textarea>
        </div>

        <div class="form-group">
            <label>Quotation Format</label>
            <select type="text" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.SLA.QuotationFormat" 
                    ng-options="item.value as item.label for item in QuotationFormatDropDown"></select>
        </div>

        <div class="form-group" ng-show="vm.SLA.QuotationFormat == 'Other'">
            <label>Quotation Format - Other</label>
            <textarea rows="3" class="form-control" ng-model="vm.SLA.QuotationFormat_Other"></textarea>
        </div>

        <div class="form-group">
            <label>Authority to Ticket</label>
            <select type="text" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.SLA.AuthorityToTicket" 
                    ng-options="item.value as item.label for item in AuthorityToTicketDropDown"></select>
        </div>

        <div class="form-group">
            <label>Fare Audit</label>
            <textarea rows="3" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.SLA.FareAudit"></textarea>
        </div>

        <div class="form-group">
            <label>AOH Reminder</label>
            <textarea rows="3" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.SLA.AOHReminder"></textarea>
        </div>

        <div class="form-group">
            <label>Remarks</label>
            <textarea rows="4" class="form-control" ng-disabled="main.CurrentUser.AccessLevel == 'U'" ng-model="vm.SLA.Remarks"></textarea>
        </div>

        <div class="form-group" ng-show="main.CurrentUser.AccessLevel == 'A'">
            <button type="button" class="btn btn-primary" ng-click="saveSLA(vm.SLA)">
                <span ng-show="main.CurrentClient.ClientCode == 'NewClient' || vm.SLA.ClientCode == null">Save</span>
                <span ng-show="main.CurrentClient.ClientCode != 'NewClient' && vm.SLA.ClientCode != null">Update</span>
            </button>
        </div>
    </div>
</div>
